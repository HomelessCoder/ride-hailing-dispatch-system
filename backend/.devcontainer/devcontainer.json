{
    "name": "Ride-Hailing Dispatcher, DevContainer",
    "build": {
        "dockerfile": "../DockerfileDevcontainer",
        "context": "."
    },
    "mounts": [
        "type=bind,source=${localEnv:HOME}/.ssh,target=/root/.ssh,readonly",
        "type=bind,source=${localEnv:HOME}/.ssh,target=${localEnv:HOME}/.ssh,readonly"
    ],
    "containerEnv": {
        "XDEBUG_MODE": "debug",
        "XDEBUG_SESSION": "1",
        "XDEBUG_CONFIG": "start_with_request=yes log_level=0"
    },
    "forwardPorts": [
        8080
    ],
    "portsAttributes": {
        "8080": {
            "label": "WebSocket Server",
            "onAutoForward": "notify"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "jaguadoromero.vscode-php-create-class",
                "junstyle.php-cs-fixer",
                "xdebug.php-debug",
                "bmewburn.vscode-intelephense-client",
                "MehediDracula.php-namespace-resolver",
                "valeryanm.vscode-phpsab",
                "SanderRonde.phpstan-vscode",
                "emallin.phpunit",
                "marclipovsky.string-manipulation",
                "formulahendry.code-runner",
                "eamodio.gitlens",
                "usernamehw.errorlens"
            ]
        }
    }
}